  "metricDefinitions": {
    "cadence_consistency": "How closely retrieve cadence matches target over time.",
    "lane_hits": "Count of casts that stay within a defined lateral lane.",
    "contact_cover": "Controlled ticks/deflections off cover without fouling.",
    "depth_control": "Percent of time lure runs within depth band.",
    "cover_deflection": "Quality and timing of squarebill/swim deflections.",
    "depth_track_error": "Average deviation from target depth (lower is better).",
    "rhythm_variance": "Variance from programmed stop–go rhythm.",
    "entry_offset_upwind": "Aim compensation upwind at entry (m).",
    "edge_time_on_path": "Time lure stays on the marked edge/path.",
    "tick_events": "Valid brief contact events along an edge.",
    "skip_distance": "Distance traveled across the surface during skips.",
    "quiet_entry": "Landing noise proxy and splash control.",
    "ring_hits": "Accuracy rings hits (center/inner/outer).",
    "precision": "Hit proximity to target center for short pitches.",
    "sound_proxy": "Estimated entry sound vs threshold.",
    "first_move_latency": "Delay before moving bait after splashdown.",
    "countdown_error": "Error between called and actual bottom contact time.",
    "line_control": "Slack management quality during sink/pause.",
    "bite_detection": "Correctly identified simulated taps.",
    "time_in_lane": "Percent time float/lure stays in drift lane.",
    "correction_efficiency": "Minimal, timely corrections to hold lane.",
    "over_drag_penalty": "Penalty for dragging float out of natural drift.",
    "correct_timing_rate": "Rate of correct hookset timing on prompts.",
    "premature_late_index": "Composite penalty for early/late sets.",
    "rig_accuracy": "Placement accuracy for rigs (e.g., hair-rig pad hits).",
    "strike_delay_discipline": "Adherence to species/rig-specific set delay."
  },
